{
  "version": 2,
  "buildCommand": "bun run build",
  "installCommand": "bun install",
  "builds": [
    {
      "src": "packages/api/src/index.ts",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs18.x"
      }
    },
    {
      "src": "packages/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "packages/landing/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/api/src/index.ts"
    },
    {
      "src": "/landing/(.*)",
      "dest": "packages/landing/dist/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "packages/web/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
