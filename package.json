{
  "name": "scaffold",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "app": "bun --cwd packages/app dev",
    "landing": "bun --cwd packages/landing dev",
    "api": "bun --cwd packages/api dev",
    "build": "bun run build:app && bun run build:landing && bun run build:api",
    "build:app": "bun --cwd packages/app build",
    "build:landing": "bun --cwd packages/landing build",
    "build:api": "bun --cwd packages/api build"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.22"
  }
}
